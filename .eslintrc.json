{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings":{
        "react": {
            "version": "detect" 
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
        // Caso quisesse desabilitar essa checagem no eslint
        //"no-unused-vars": "off"
    }
}
